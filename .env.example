ENV=dev

# Neo4j
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=please_change_me

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333

# LLM (single provider: Google Gemini)
LLM_MODEL=gemini-2.5-pro
LLM_ENABLE_REMOTE=true
# GOOGLE_API_KEY=your_gemini_api_key_here

# Optional scraper toggles
SCRAPER_ENABLE_HTTPX=true
SCRAPER_ENABLE_CLOUDSCRAPER=false
SCRAPER_ENABLE_SCRAPY=false
SCRAPER_ENABLE_CRAWL4AI=false
SCRAPER_ENABLE_CRAWLEE=false
SCRAPER_ENABLE_FIRECRAWL=false

# Observability
LOG_LEVEL=INFO
LOG_FORMAT=plain
METRICS_ENABLED=true
# SENTRY_DSN=

# Scheduler / Background ingestion
ENABLE_SCHEDULER=false
CRAWL_CRON="0 * * * *"
INDEX_CRON="30 * * * *"
CRAWL_SEEDS=
INDEX_IDS=